<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <BorderPane prefHeight="500.0" prefWidth="700.0">
            <left>
                <AnchorPane prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: #1397d5;" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView layoutX="93.0" layoutY="168.0">
                            <image>
                                <Image url="@../resources/logo_size_invert.jpg" />
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
            </left>
            <right>
                <AnchorPane prefHeight="500.0" prefWidth="350.0" BorderPane.alignment="CENTER">
                    <children>
                        <TextField fx:id="studentId" layoutX="101.0" layoutY="103.0" promptText="Student Id" style="-fx-background-color: transparent; -fx-border-color: #1397d5; -fx-border-width: 0px 0px 2px 0px;" />
                        <PasswordField fx:id="password" layoutX="101.0" layoutY="298.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: #1397d5; -fx-border-width: 0px 0px 2px 0px;" />
                        <Button layoutX="115.0" layoutY="422.0" mnemonicParsing="false" onAction="#onRegister" prefHeight="29.0" prefWidth="120.0" style="-fx-background-color: #1397d5;" text="Register" textFill="WHITE" />
                        <Text fill="#1397d5" fontSmoothingType="LCD" layoutX="113.0" layoutY="77.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Register User">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Text>
                        <Button layoutX="290.0" layoutY="14.0" mnemonicParsing="false" onAction="#onClose" style="-fx-background-color: transparent;" text="Close" textFill="#1397d5" textOverrun="CENTER_ELLIPSIS">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                  <TextField fx:id="lastName" layoutX="101.0" layoutY="203.0" promptText="Last Name" style="-fx-background-color: transparent; -fx-border-color: #1397d5; -fx-border-width: 0px 0px 2px 0px;" />
                  <PasswordField fx:id="confirmPassword" layoutX="101.0" layoutY="344.0" promptText="Cofirm Password" style="-fx-background-color: transparent; -fx-border-color: #1397d5; -fx-border-width: 0px 0px 2px 0px;" />
                  <TextField fx:id="firstName" layoutX="101.0" layoutY="152.0" promptText="First Name" style="-fx-background-color: transparent; -fx-border-color: #1397d5; -fx-border-width: 0px 0px 2px 0px;" />
                  <TextField fx:id="email" layoutX="101.0" layoutY="250.0" promptText="Email" style="-fx-background-color: transparent; -fx-border-color: #1397d5; -fx-border-width: 0px 0px 2px 0px;" />
                  <Hyperlink layoutX="14.0" layoutY="463.0" onAction="#redirectToLogin" text="Back to Login" />
                    </children>
                </AnchorPane>
            </right>
        </BorderPane>
    </children>
</GridPane>
